{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Documentation - PayNext",
  "colors": {
    "primary": "#006FEE",
    "light": "#2d88f1",
    "dark": "#00489b"
  },
  "favicon": "/favicon.svg",
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude"
    ]
  },
  "api": {
    "examples": {
      "languages": [
        "curl",
        "javascript",
        "go",
        "java",
        "python",
        "php"
      ],
      "defaults": "required"
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Guides",
        "icon": "map",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "src/guides/introduction/core-concepts",
              "src/guides/introduction/currencies"
            ]
          },
          {
            "group": "Getting Started",
            "pages": [
              "src/guides/getting-started/overview",
              "src/guides/getting-started/integration"
            ]
          },
          {
            "group": "Payments",
            "pages": [
              "src/guides/payments/overview",
              "src/guides/payments/payment-processing",
              "src/guides/payments/decline-codes",
              "src/guides/payments/managing-payments",
              "src/guides/payments/webhooks"
            ]
          },
          {
            "group": "Subscriptions",
            "pages": [
              "src/guides/subscriptions/overview",
              "src/guides/subscriptions/quick-start",
              "src/guides/subscriptions/plans",
              "src/guides/subscriptions/managing-subscriptions"
            ]
          },
          {
            "group": "PayNext CRM",
            "pages": [
              "src/guides/paynext-crm/overview"
            ]
          }
        ]
      },
      {
        "dropdown": "Public API",
        "icon": "code",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "src/api-reference/introduction/getting-started",
              "src/api-reference/introduction/authentication",
              "src/api-reference/introduction/status"
            ]
          },
          {
            "group": "API Reference",
            "openapi": {
              "source": "/src/api-reference/openapi3.json",
              "directory": "src/api-reference"
            }
          },
          {
            "group": "Objects",
            "pages": [
              "src/api-reference/objects/client-session/client-session",
              "src/api-reference/objects/customer/customer",
              "src/api-reference/objects/payments/payment",
              "src/api-reference/objects/subscription/subscription",
              "src/api-reference/objects/error/error"
            ]
          }
        ]
      },
      {
        "dropdown": "Webhooks",
        "icon": "webhook",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "src/webhooks/introduction/getting-started",
              "src/webhooks/introduction/event-types"
            ]
          },
          {
            "group": "Objects",
            "pages": [
              "src/webhooks/objects/payment/payment",
              "src/webhooks/objects/subscription/subscription"
            ]
          }
        ]
      },
      {
        "dropdown": "SDK",
        "icon": "brackets-square",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "src/sdk-reference/getting-started"
            ]
          },
          {
            "group": "Client SDKs",
            "pages": [
              {
                "group": "React",
                "pages": [
                  "src/sdk-reference/react/overview",
                  "src/sdk-reference/react/installation",
                  "src/sdk-reference/react/client-token",
                  "src/sdk-reference/react/advanced-usage",
                  "src/sdk-reference/react/customization",
                  {
                    "group": "Checkout Style",
                    "pages": [
                      "src/sdk-reference/react/checkout-styles/overview",
                      "src/sdk-reference/react/checkout-styles/input-style",
                      "src/sdk-reference/react/checkout-styles/button-style"
                    ]
                  }
                ]
              }
            ]
          },
          {
            "group": "API ",
            "pages": [
              "src/sdk-reference/common-objects",
              "src/sdk-reference/constants"
            ]
          }
        ]
      },
      {
        "dropdown": "Changelog",
        "icon": "scroll",
        "groups": [
          {
            "group": "Information",
            "pages": [
              "src/information/changelog"
            ]
          }
        ]
      }
    ]
